        "module": "commonjs",
        "target": "es2016",
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "inlineSourceMap": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}